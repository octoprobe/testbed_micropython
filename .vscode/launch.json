    "version": "0.2.0",
    "configurations": [
        {
            "name": "mptest labels",
            "type": "debugpy",
            "request": "launch",
            "module": "testbed_micropython.mptest.cli",
            "cwd": "${workspaceFolder}",
            "args": [
                "labels"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
            },
            "justMyCode": false,
        },
        {
            "name": "mptest list",
            "type": "debugpy",
            "request": "launch",
            "module": "testbed_micropython.mptest.cli",
            "cwd": "${workspaceFolder}",
            "args": [
                "list",
            ],
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
            },
            "justMyCode": false,
        },
        {
            "name": "mptest debugbootmode",
            "type": "debugpy",
            "request": "launch",
            "module": "testbed_micropython.mptest.cli",
            "cwd": "${workspaceFolder}",
            "args": [
                "debugbootmode",
                "--programmer=samd_mount_point",
                // "--programmer=dfu-util",
                // "--programmer=bossac",
            ],
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
            },
            "justMyCode": false,
        },
        {
            "name": "mptest flash",
            "type": "debugpy",
            "request": "launch",
            "module": "testbed_micropython.mptest.cli",
            "cwd": "${userHome}/octoprobe_downloads/git-cache/worktree/firmware_github-com-micropython-micropython",
            "args": [
                "flash",
                // "--last-variant",
            ],
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
            },
            "justMyCode": false,
        },
        {
            "name": "mptest test",
            "type": "debugpy",
            "request": "launch",
            "module": "testbed_micropython.mptest.cli",
            "cwd": "${workspaceFolder}",
            "args": [
                // "--help",
                "test",
                "--micropython-tests=https://github.com/micropython/micropython.git@master",
                // "--micropython-tests=https://github.com/micropython/micropython.git@tests-full-test-runner",
                // v1.24.1: PYBV11 fails
                // "--firmware-build=https://github.com/micropython/micropython.git@v1.24.1",
                // "--firmware-build=https://github.com/micropython/micropython.git@v1.24.0",
                "--firmware-build=https://github.com/micropython/micropython.git@master",
                // "--firmware-build=https://github.com/dpgeorge/micropython@master",
                // "--firmware-build=https://github.com/hmaerki/fork_micropython@fix_build_ESP32_GENERIC_S3",
                // "--flash-skip",
                // "--flash-force",
                // "--no-multiprocessing",
                // "--git-clean",
                // "--only-test=RUN-TESTS_BASICS",
                // "--only-test=RUN-TESTS_EXTMOD_HARDWARE",
                // "--only-test=RUN-TESTS_NET_HOSTED",
                // "--only-test=RUN-TESTS_NET_INET",
                // "--only-board=PYBV11",
                // "--only-board=PYBV11-DP",
                // "--only-board=ESP8266_GENERIC-FLASH_512K",
                // "--only-board=ESP8266_GENERIC",
                // "--only-board=RPI_PICO",
                // "--only-board=RPI_PICO_W",
                // "--only-board=RPI_PICO2",
                // "--only-board=RPI_PICO2-RISCV",
                // "--only-board=ADAFRUIT_ITSYBITSY_M0_EXPRESS",
                // "--firmware-build-git=https://github.com/micropython/micropython.git@master",
                // "--firmware-build-git=https://github.com/micropython/micropython.git@master",
                // "--only-test=RUN-TESTS_EXTMOD_HARDWARE",
            ],
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
            },
            "justMyCode": false,
            "subProcess": false,
        },
        {
            "name": "pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                // "--collect-only",
                // "-q",
                "-s",
                "-v",
                "tests/test_collection.py::test_collection[wlan_asymmetrical]"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "justMyCode": false,
        },
        {
            "name": "Ruff",
            "type": "debugpy",
            "request": "launch",
            "module": "ruff",
            "cwd": "${workspaceFolder}",
            "args": [
                "check",
                "--config",
                "pyproject.toml",
                "--fix",
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Mypy",
            "type": "debugpy",
            "request": "launch",
            "module": "mypy",
            "cwd": "${workspaceFolder}",
            "args": [
                "--config-file",
                "pyproject.toml",
                "src",
                "tests",
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "subProcess": false,
        },
        {
            "name": "Python: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "justMyCode": false,
            "subProcess": false,
        },
        {
            "name": "mpremote a0 ls",
            "type": "debugpy",
            "request": "launch",
            "module": "mpremote",
            "console": "integratedTerminal",
            "args": [
                "a0",
                "ls"
            ],
            "justMyCode": false,
            "subProcess": false,
        }
    ]
}